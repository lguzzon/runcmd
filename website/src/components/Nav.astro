---
const { base = '', githubUrl = 'https://github.com/lguzzon/runcmd' } = Astro.props

const normalizedBase = base === '/' ? '' : base

const homeHref = `${normalizedBase}/#top`
const featuresHref = `${normalizedBase}/#features`
const docsHref = `${normalizedBase}/docs/#docs`
---
<nav class="fixed w-full z-50 backdrop-blur-lg border-b border-gray-200/50 dark:border-gray-800/50 bg-white/60 dark:bg-gray-950/60">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    <a href={homeHref} class="flex items-center gap-2 font-bold text-xl text-gray-900 dark:text-gray-100">
      <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <rect x="3" y="5" width="18" height="14" rx="3"></rect>
        <path d="M7 9l3 3-3 3M12 15h5"></path>
      </svg>
      <span>runcmd</span>
    </a>
    <div class="flex items-center gap-4 text-sm font-semibold">
      <a href={featuresHref} class="text-gray-700 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-400">Features</a>
      <a href={docsHref} class="text-gray-700 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-400">Docs</a>
      <a href={githubUrl} class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" aria-label="GitHub">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 .5C5.65.5.5 5.64.5 12a11.5 11.5 0 0 0 7.86 10.93c.58.11.79-.25.79-.56 0-.28-.01-1.02-.02-2-3.2.69-3.87-1.54-3.87-1.54-.53-1.35-1.29-1.71-1.29-1.71-1.06-.72.08-.71.08-.71 1.17.08 1.78 1.2 1.78 1.2 1.04 1.78 2.73 1.26 3.4.96.1-.76.41-1.26.74-1.55-2.55-.29-5.23-1.27-5.23-5.67 0-1.25.45-2.27 1.2-3.07-.12-.3-.52-1.52.11-3.16 0 0 .97-.31 3.18 1.17a11.1 11.1 0 0 1 5.8 0c2.2-1.48 3.17-1.17 3.17-1.17.64 1.64.24 2.86.12 3.16.75.8 1.2 1.82 1.2 3.07 0 4.41-2.69 5.37-5.26 5.66.43.37.81 1.1.81 2.23 0 1.61-.02 2.91-.02 3.3 0 .31.21.68.8.56A11.5 11.5 0 0 0 23.5 12C23.5 5.64 18.35.5 12 .5Z" clip-rule="evenodd" />
        </svg>
      </a>
      <button data-theme-toggle type="button" aria-pressed="true" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group" aria-label="Toggle theme">
        <span class="sr-only">Toggle theme</span>
        <svg class="w-5 h-5 hidden dark:block group-hover:text-yellow-400 transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="5" />
          <path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
        </svg>
        <svg class="w-5 h-5 dark:hidden group-hover:text-blue-400 transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79Z" />
        </svg>
      </button>
    </div>
  </div>
</nav>